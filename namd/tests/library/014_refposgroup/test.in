colvarsTrajFrequency    1
colvarsRestartFrequency 2000


colvar {
  name r

  outputAppliedForce yes

  eigenvector {
    refPositionsFile ../Common/da-rotated.pdb # ref ligand positions
    vectorFile ../Common/random_vec_10.xyz # 30 random numbers
#    debugGradients yes
    atoms {
      atomNumbers  10 20 30 40 50 60 70 80 90 92  # carbonyl carbons
      rotateReference yes
      centerReference yes
      refPositionsGroup {
        atomNumbers  4 14 24 34 44 54 64 74 84 99   # Calpha
      }
      refPositionsFile ../Common/da-rotated.pdb # ref prot positions for fitting
    }
  }
} 


harmonic {
  colvars r
  centers 0.0
  forceConstant 0.1
}


colvar {
  name ori
  orientation {
    refPositionsFile ../Common/da-rotated-Calpha.xyz
    atoms {
      atomNumbers  4 14 24 34 44 54 64 74 84 99   # Calpha
    }
  }
} 
