colvar {
  name z

  outputAppliedForce yes

  distanceZ {
    debugGradients yes
    scalable no
    main {
    atomNumbers  4
      rotateReference yes
      centerReference yes
      refPositionsGroup {
        atomNumbers  54 64 74 84
      }
      refPositionsFile ../Common/da.pdb # ref prot positions for fitting
    }
    ref {
      dummyAtom (0, 0, 0)
    }
  }
}

harmonic {
  colvars z
  centers 0.
  forceConstant 0.1
}

